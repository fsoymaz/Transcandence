events {
    worker_connections 1024;
}

http {
    server {
        listen 80;
        server_name fsoymaz.tech;

        location / {
            return 301 https://$host$request_uri;
        }
    }

    server {
        listen 443 ssl;
        server_name fsoymaz.tech;

        ssl_certificate /etc/letsencrypt/live/fsoymaz.tech/fullchain.pem;
        ssl_certificate_key /etc/letsencrypt/live/fsoymaz.tech/privkey.pem;

        root /var/www/html;
        index index.html;

        location / {
            proxy_pass http://front:80;
            proxy_redirect off;
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
        }

        location /api/ {
            proxy_pass http://auth:8000;
            proxy_redirect off;
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
        }
    }
}
